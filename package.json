{
  "author": "luddens",
  "name": "tsreactbp",
  "license": "ISC",
  "version": "1.0.0",
  "description": "A Node/TS/React boilerplate app",
  "main": "app.js",
  "scripts": {
    "tsnode": "tsnd --project tsnodeconfig.json --respawn app.ts",
    "tsdev": "concurrently \"tsnd --project tsnodeconfig.json --respawn app.ts --watch backend --transpile-only\" \"webpack-dev-server\" \"npm run test\" ",
    "dev": "concurrently \"nodemon app.js\" \"webpack-dev-server\" \"npm run test\" ",
    "build": "webpack --config webpack.config.js",
    "dev-build": "concurrently \"nodemon app.js\" \"webpack-dev-server\"",
    "start": "npm run build",
    "poststart": "\"nodemon app.js\"",
    "test": "mocha --require ts-node/register --watch-extensions ts,tsx --require @babel/register --require ./tests/helpers.js --require ./tests/dom.js --require ignore-styles ./frontend/**/*test.js  -w",
    "kill": "concurrently \"kill-port 8080\" \"kill-port 3000\""
  },
  "dependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@babel/register": "^7.8.3",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "body-parser": "^1.19.0",
    "concurrently": "^5.1.0",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-react": "^7.18.3",
    "express": "^4.17.1",
    "file-loader": "^5.0.2",
    "html-webpack-plugin": "^3.2.0",
    "jsdom": "^16.1.0",
    "jsdom-global": "^3.0.2",
    "kill-port": "^1.6.0",
    "mongodb": "^3.5.3",
    "mongoose": "^5.9.1",
    "mysql": "^2.18.1",
    "node-sass": "^4.13.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-dropzone": "^10.2.1",
    "react-router-dom": "^5.1.2",
    "sass-loader": "^8.0.2",
    "sequelize": "^5.21.4",
    "source-map-loader": "^0.2.4",
    "stack-trace": "0.0.10",
    "style-loader": "^1.1.3",
    "thread-loader": "^2.1.3",
    "ts-loader": "^6.2.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.5",
    "uuidv4": "^6.0.2",
    "webpack": "^4.41.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.2",
    "chai": "^4.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "ignore-styles": "^5.0.1",
    "mocha": "^7.0.1",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "sinon": "^8.1.1",
    "stylelint": "^13.2.0",
    "stylelint-scss": "^3.14.2",
    "stylelint-webpack-plugin": "^1.2.3",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
